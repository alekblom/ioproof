PORT=3000
NODE_ENV=development

# Base URL for verification links (default: https://ioproof.com)
# Change this if self-hosting on a different domain
BASE_URL=https://ioproof.com

# Auth (set REQUIRE_API_KEY=false for self-hosted instances)
REQUIRE_API_KEY=true
SESSION_SECRET=change-this-to-a-random-64-char-hex-string
EMAIL_API_KEY=
EMAIL_FROM=noreply@ioproof.com

# Solana
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_KEYPAIR_SECRET=
# Solana cluster for explorer links: devnet | testnet | mainnet-beta
SOLANA_CLUSTER=devnet

# Batch processing
BATCH_INTERVAL_MS=3600000
BATCH_MIN_PROOFS=1
